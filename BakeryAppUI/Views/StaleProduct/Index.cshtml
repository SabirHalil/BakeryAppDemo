 @model BakeryAppUI.Models.Date

<div class="container mt-5">

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="row">
                <label for="inputDate" class="col-sm-2 col-form-label font-weight-bold fs-5">Tarih</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-lg">
                        <input type="date" class="form-control font-weight-bold" id="inputDate"
                               max="@DateTime.Now.ToString("yyyy-MM-dd")"
                               value="@ViewBag.date.ToString("yyyy-MM-dd")"
                               onchange="submitForm()">
                    </div>
                </div>
            </div>
        </div>
    </div>


    @using (Html.BeginForm("PostDate", "StaleProduct", FormMethod.Post, new { id = "myForm" }))
    {
        <input type="hidden" id="dateHidden" name="date" />
    }

    <script>
        function submitForm() {
            var selectedDate = document.getElementById("inputDate").value;
            document.getElementById("dateHidden").value = selectedDate;
            document.getElementById("myForm").submit();
        }
    </script>



    <div class="container">
        <div class="text-center">
            <h3>Bayat Ürün Sayımı</h3>
        </div>
        @*    <div class="mb-3">
        <a href="@Url.Action("Add")" class="btn btn-success">
        Yeni Kayıt
        </a>
        </div> *@


        <table id="myTable" class="table table-striped">
            <thead>
                <tr>
                    @*  <th class="th-sm">
                    Kategori
                    </th> *@

                    <th class="th-sm">
                        Ürün Adı
                    </th>
                    <th class="th-sm">
                        Adedi
                    </th>

                    <th class="th-sm">
                        Düzenle
                    </th>
                    <th class="th-sm">
                        Sil
                    </th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var liste in ViewBag.staleBread)
                {
                    <tr>

                        <td>@liste.DoughFactoryProductName</td>
                        <td>@liste.Quantity</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@liste.Id" class="btn btn-info btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@liste.Id"
                               onclick="return confirm('Are you sure you want to delete this record?')"
                               class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                        </td>
                    </tr>
                }

                @foreach (var liste in ViewBag.stalePasta)
                {
